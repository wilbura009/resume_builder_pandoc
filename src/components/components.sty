\newcommand{\makeProjectRowPres}[4]{
  \vspace{-1pt}\item
  \begin{tabular*}{0.97\textwidth}[t]{l@{\extracolsep{\fill}}r}
    % projectName (githubLink | presentationLink)
    \textbf{#1} ( \textit{\small#2} | \textit{\small#3} ) \\
    % projectDescription
    \textit{\small#4} \\
  \end{tabular*}\vspace{-5pt}
}

\newcommand{\makeProjectRowNoPres}[3]{
